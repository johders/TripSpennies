@page "/"

@inject AuthorizationService Authorized
@inject NavigationManager NavigationManager
@inject MauiInterop interop 

@code{

	protected override void OnInitialized()
	{
		interop.HideLoader();
		if (Authorized.IsSignedIn)
		{
			NavigationManager.NavigateTo("/homepage", replace: true);
		}
		else
		{
			NavigationManager.NavigateTo("/signin", replace: true);
		}
	}

}